<component name="pipelinedeals-person" type="synapse/template">
    <subComponents>
        <component name="createPerson">
            <file>createPerson.xml</file>
            <description>Create a new person in PipelineDeals using the provided Parameters.</description>
        </component>
        <component name="updatePerson">
            <file>updatePerson.xml</file>
            <description>Update details of the person identified by the provided person ID.</description>
        </component>
        <component name="getPerson">
            <file>getPerson.xml</file>
            <description>Retrieve details of a person identified by the provided person ID.</description>
        </component>
        <component name="listPeople">
            <file>listPeople.xml</file>
            <description>Retrieve a List of people from PipelineDeals.</description>
        </component>
    </subComponents>
</component>
